{
    "name": "kuribon",
    "displayName": "Kuribon",
    "description": "lua help tools",
    "version": "0.2.2",
    "icon": "images/icon.png",
    "publisher": "uc10d",
    "engines": {
        "vscode": "^1.14.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.addHeadNote",
        "onCommand:extension.formatEntity"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "lua file header configuration",
            "properties": {
                "param.Author": {
                    "type": "string",
                    "default": "uc10d",
                    "description": "author"
                },
                "param.Company": {
                    "type": "string",
                    "default": "©2017福州博翼互娱网络科技有限公司",
                    "description": "company"
                }
            }
        },
        "keybindings": [
            {
                "command": "extension.addHeadNote",
                "title": "head note",
                "key": "shift+cmd+1"
            },
            {
                "command": "extension.formatEntity",
                "title": "init and creat entity",
                "key": "shift+cmd+2"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}